@model Vou.Web.Models.Dto.BrandDto

<form asp-action="BrandDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Brand</h1>
        <input asp-for="Id" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Brand Id</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Id" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">GPS</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="GPS" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="BrandIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>
